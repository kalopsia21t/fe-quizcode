{
    "defaultSeverity": "error",
    "extends": "tslint:recommended",
    "jsRules": {},
    "rules": {
      "quotemark": [true, "single", "jsx-single"],
      "match-default-export-name": false,
      "import-name": false,
      "no-boolean-literal-compare": false,
      "max-line-length": [true, 256],
      "semicolon": [true, "always", "ignore-bound-class-methods"],
      "variable-name": [true, "allow-pascal-case", "allow-leading-underscore", "allow-trailing-underscore"],
      "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
      "no-console": [true, "warn", "error"],
      "switch-default": true,
      "no-empty-interface": true,
      "no-magic-numbers": [true, 0, -1, 1],
      "no-parameter-reassignment": true,
      "no-duplicate-switch-case": true,
      "no-duplicate-imports": true,
      "no-duplicate-variable": true,
      "no-var-keyword": true,
      "no-unused-expression": true,
      "radix": true,
      "prefer-const": true,
      "arrow-return-shorthand": true,
      "interface-name": [true, "always-prefix"],
      "class-name": true,
      "prefer-function-over-method": false,
      "prefer-switch": [true, {"min-cases": 2}],
      "switch-final-break": true
    },
    "rulesDirectory": []
  }
  